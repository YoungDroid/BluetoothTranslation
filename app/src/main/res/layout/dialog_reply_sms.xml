<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_simple_dialog"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="6dp">

    <EditText
        android:id="@+id/et_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:background="@drawable/rectangle_reply_sms"
        android:hint="输入信息~"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/md_blue_800"
        android:textColorHint="@color/md_blue_300"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:imeOptions="actionSend"
        android:maxHeight="80dp"
        android:scrollbars="vertical"
        android:textCursorDrawable="@null"/>

    <Button
        android:id="@+id/b_send"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="0.2"
        android:layout_marginLeft="12dp"
        android:text="Send"
        android:gravity="center"
        android:background="@drawable/rectangle_reply_sms_send"
        android:textColor="@color/md_white_1000"
        android:textSize="14sp"/>
</LinearLayout>